<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_280"
    android:layout_margin="@dimen/dp_12"
    android:id="@+id/local_item_card"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/dp_4"
    card_view:cardBackgroundColor="#eeeeee"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/local_item_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_180"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            />
        <LinearLayout
            android:id="@+id/local_item_lin_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/local_item_img_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_8"
                android:scaleType="center"
                android:src="@drawable/active_dislike_24dp" />

            <TextView
                android:id="@+id/local_item_txt_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/bg_number"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/local_item_img"
            android:padding="@dimen/dp_12">
            <cn.lingox.android.share.view.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/local_item_img_avatar"
                android:layout_width="@dimen/dp_64"
                android:layout_height="@dimen/dp_64"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_avatar"
                app:civ_border_width="0dp"/>
            <TextView
                android:id="@+id/local_item_txt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/local_item_img_avatar"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:maxLines="2"
                />
            <TextView
                android:id="@+id/local_item_txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/local_item_txt_title"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/gray"
                android:singleLine="true"
                />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>