<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_12"
    android:id="@+id/traveler_item_card"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/dp_4"
    card_view:cardBackgroundColor="#eeeeee"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_12"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <cn.lingox.android.share.view.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/traveler_item_img_avatar"
                android:layout_width="@dimen/dp_64"
                android:layout_height="@dimen/dp_64"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_avatar"
                app:civ_border_width="0dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/traveler_item_img_avatar"
                android:layout_alignBottom="@id/traveler_item_img_avatar"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/traveler_item_txt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    />
                <TextView
                    android:id="@+id/traveler_item_txt_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/gray"
                    android:singleLine="true"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/traveler_item_txt_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/traveler_item_img_avatar"
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/black"
                android:maxLines="3"
                />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>