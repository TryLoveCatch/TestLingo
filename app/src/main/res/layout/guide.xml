<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhihu="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">

    <android.support.v4.view.ViewPager
        android:id="@+id/guide_pager"
        android:paddingBottom="@dimen/dp_100"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/bottons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_alignParentBottom="true">

        <Button
            android:textSize="@dimen/sp_18"
            android:textColor="@color/white"
            android:id="@+id/guide_login"
            android:background="@drawable/guide_button_blue"
            android:padding="0.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:minHeight="@dimen/dp_48"
            android:text="@string/login"
            android:layout_weight="1.0"/>

        <Button
            android:textSize="@dimen/sp_18"
            android:textColor="@color/gray"
            android:id="@+id/guide_regist"
            android:background="@drawable/guide_button_white"
            android:padding="0.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:minHeight="@dimen/dp_48"
            android:text="@string/regist"
            android:layout_weight="1.0"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/guide_indicator_lin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_above="@id/bottons"/>
</RelativeLayout>